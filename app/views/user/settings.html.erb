<head>
  <style>
    * {
      box-sizing: border-box;
    }
    @media only screen and (max-width: 600px) {
      html {
        font-size:9px
      }
    }   
    /* Small devices (portrait tablets and large phones, 600px and up) */
    @media only screen and (min-width: 600px) {
        html {
          font-size:12px
        }
    }
    /* Medium devices (landscape tablets, 768px and up) */
    @media only screen and (min-width: 768px) {
      html {
          font-size:16px
      }
    }
    /* Large devices (laptops/desktops, 992px and up) */
    @media only screen and (min-width: 992px) {
      html {
          font-size:16px
      }
    }
  </style>
</head>

<body>
  <h2 style = "text-align:center; margin-top:3%; text-decoration: underline">Settings</h2>
  <center>
    <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert" style = "width:30%">
        
          <%= flash[:notice]  %>
        
      </div>
    <% end %>
    <%= form_tag('/update_password') do %>
      <%= password_field(:current_password, nil, placeholder: 'Current Password', style: 'margin-bottom:2%; margin-top:2%; width:30%', required: 'true', class: 'form-control form-control-lg') %>
      <br>
      <%= password_field(:new_password, nil, placeholder: 'New Password' , style: 'margin-bottom:2% ; width:30%', required: 'true',  class: 'form-control form-control-lg') %>
      <br>
      <%= password_field(:confirmation_password, nil, placeholder: 'Password Confirmation' , style: 'margin-bottom:2% ; width:30%', required: 'true',  class: 'form-control form-control-lg') %>
      <br>
      <%= submit_tag("Change Password", class: 'btn btn-outline-secondary') %>
    <% end %>
  </center>
</body>