<head>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <style>
      .backsplash {
          height: 300px;
          background-image: linear-gradient(to top right, #00a8f3, rgb(10, 74, 117));
          margin-top: 0%;
      }
  </style>

</head>

<body>
  <div class = "backsplash">
    
  </div>
  <h2 style = "text-align:center; margin-top:-50px; color:white;"> <%=@user.name%> <h2>
  <center>
    <div class = "container" style = "margin-top:50px;">
      <div class = "row">
        <div class = "col">
          <h3 style = "text-decoration:underline"> <%=@user.name%>'s Points </h3>
          <h5>General Meeting Points: <%=@user.general_meeting_points %> </h5>
          <h5>Mentorship Meeting Points: <%=@user.mentorship_meeting_points %> </h5>
          <h5>Social Meeting Points: <%=@user.social_points %> </h5>
          <h5>Total Meeting Points: <%=@user.total_points %> </h5>

          
        </div>
        <div class = "col" style ="margin-left:%">
          <h3 style = "text-decoration:underline"> Status: </h3>
          
          <h5 style = "text-decoration:underline"> Active Member Status: </h5>
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%=@user.total_points*20%>%" aria-valuenow="<%=@user.total_points*20 %>" aria-valuemin="0" aria-valuemax="100">
            <%=@user.total_points%>/5 Points</div>
          </div>
        </div>
      </div>
    </div>
  

  
  <div class = "container" style = "margin-top:30px;">
    <h3 style = "text-decoration:underline"> <%=@user.name%>'s Recent Events </h3>
    <div class = "row">
    
      <div class = "col">
        <% if (@user.events.length == 0) %>
          <h5 > None! </h5>
        <% end %>
      </div>
    </div>
  </div>
  </center>
</body>